{
  "name": "dbolt",
  "version": "0.0.1",
  "description": "DBOLT Database Manager - Manage your databases with ease",
  "author": "Vin√≠cius Macacari de Almeida",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "start": "electron .",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "devserver": "nodemon /api/server.js",
    "build-angular": "ng build",
    "electron-pack": "electron-packager . dbolt --platform=win32 --arch=x64 --out=dist --overwrite --asar",
    "build-installer": "electron-builder",
    "dbolt": "npm run build-angular && npm run build-installer"
  },
  "build": {
    "appId": "com.dbolt.app",
    "productName": "DBOLT Database Manager",
    "directories": {
      "output": "dist/installer"
    },
    "files": [
      "main.js",
      "dist/**/*",
      "api/**/*",
      "node_modules/**/*",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "type": "module",
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/cdk": "^18.2.14",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@electron/remote": "^2.1.2",
    "@monaco-editor/loader": "^1.4.0",
    "@sap/hana-client": "^2.22.32",
    "ag-grid-angular": "^33.0.1",
    "bootstrap": "5.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "install": "^0.13.0",
    "monaco-editor": "^0.52.0",
    "mssql": "^11.0.1",
    "mysql2": "^3.11.5",
    "ng-monaco-editor": "^5.1.1",
    "npm": "^10.9.2",
    "pg": "^8.13.1",
    "rxjs": "~7.8.0",
    "sortablejs": "^1.15.6",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^18.0.0",
    "@angular-devkit/build-angular": "^18.2.6",
    "@angular/cli": "^18.2.6",
    "@angular/compiler-cli": "^18.2.0",
    "@sap/hana-client": "^2.22.32",
    "@types/jasmine": "~5.1.0",
    "@types/sortablejs": "^1.15.8",
    "ag-grid-community": "^33.0.1",
    "bootstrap": "5.3",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-packager": "^17.1.2",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.2"
  }
}
